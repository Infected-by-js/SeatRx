{
  "version": "0.1.0",
  "name": "seats_sync_backend",
  "description": "Backend for the SeatsSync project",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "module-alias": "^2.2.3",
    "nodemon": "^3.1.7",
    "pg": "^8.13.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@controllers": "dist/controllers",
    "@dtos": "dist/dtos",
    "@exceptions": "dist/exceptions",
    "@interfaces": "dist/interfaces",
    "@middlewares": "dist/middlewares",
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@services": "dist/services",
    "@utils": "dist/utils"
  }
}
